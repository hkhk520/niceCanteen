@import "./edit_address.skeleton.wxss";

.edit-address {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  width: 100%;
  height: 96vh;
  font-size: 28rpx;
  color: #333;
}

.edit-address .address-info-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.edit-address .address-info-box .info-item-box {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
  padding: 20rpx 0;
  box-sizing: border-box;
  position: relative;
}

.edit-address .address-info-box .info-item-box .title {
  width: 140rpx;
}

.edit-address .address-info-box .info-item-box input {
  flex: 1;
  height: 100%;
}

.edit-address .address-info-box .info-item-box:last-of-type {
  border: none;
}

.edit-address .address-info-box .info-item-box .picker-box {
  color: #ccc;
  font-size: 26rpx;
  flex: 1;
  height: 100%;
}

.edit-address .address-info-box .info-item-box image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 26rpx;
}

.default-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 12rpx 20rpx 28rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 修改switch组件的样式 */
.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}
.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}
.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.btn-box{
  width: 100%;
  display: flex;
  justify-content: center;
}
.btn-box .btn{
  width: 86%;
  background-color: #19c6ff;
  padding: 16rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 2rpx solid #eeeeee;
}
.btn-save{
  margin: 70rpx 0 28rpx;
  color: #fff;
}
.btn-del .btn{
  background-color: #fff;
}
.active-area{
  color: #333 !important;
  font-size: 28rpx !important;
}